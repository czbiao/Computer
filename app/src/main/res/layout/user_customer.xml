<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor">

    <TextView
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue"
        android:fitsSystemWindows="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/title_top"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:id="@+id/goback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/user_maneger_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="联系客服"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/user_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:paddingLeft="40dp"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:text="人工客服"
            android:drawableLeft="@drawable/user_people"/>
        <Button
            android:id="@+id/user_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:text="微信客服"
            android:drawableLeft="@drawable/user_wechat"/>
        <Button
            android:id="@+id/user_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:text="问题咨询"
            android:drawableLeft="@drawable/user_customer"/>
        <Button
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:text="联系电话"
            android:drawableLeft="@drawable/user_phone"/>
    </LinearLayout>



</RelativeLayout>
